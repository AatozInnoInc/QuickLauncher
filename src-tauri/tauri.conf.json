{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/tooling/cli/schema.json",
  "package": {
    "productName": "QuickLauncher",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "npm run dev --prefix frontend",
    "beforeBuildCommand": "npm run build --prefix frontend",
    "devPath": "http://localhost:3000",
    "distDir": "../frontend/dist"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "identifier": "com.quicklauncher.app",
      "targets": ["msi", "nsis", "app", "dmg"]
    },
    "windows": [
      {
        "label": "main",
        "title": "Quick Launcher",
        "width": 420,
        "height": 560,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true
      }
    ],
    "allowlist": {
      "shell": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      }
    }
  }
}

